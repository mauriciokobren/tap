pipeline {
    agent any
    environment {
        TAP_HEADLESS = '1'
    }

    stages {
        stage('Checkout') { // Checkout (git clone ...) the projects repository
            steps {
                checkout scm
                echo 'Checking the code out'
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'python3.8 --version'
                sh 'python3.8 -m pip install --upgrade pip'
                sh 'pip install -r requirements.txt'
                sh 'chmod +x geckodriver'
                sh 'sudo mv geckodriver "/usr/local/bin"'
                sh 'ls /usr/local/bin/gecko*'
                sh 'echo "dependencies ok"'
            }
        }
        stage('Test') {
            steps {
                sh 'printenv TAP_HEADLESS'
                sh 'echo "starting tests"'
                sh 'pwd'
                sh 'echo "folder content is: "'
                sh 'python3.8 tests/test.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
