pipeline {
    agent any
    environment {
        TAP_HEADLESS = '1'
    }

    stages {
        stage('Checkout') { // Checkout (git clone ...) the projects repository
            steps {
                checkout scm
                echo 'Checking the code out'
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'python3.8 --version'
                sh 'python3.8 -m pip install --upgrade pip'
                sh 'pip3.8 install -r requirements.txt'
                sh 'chmod +x geckodriver'
                sh 'export PATH=/var/lib/jenkins/workspace/test:/var/lib/jenkins/workspace/test/pages:$PATH'
                sh 'echo "dependencies ok"'
            }
        }
        stage('Test') {
            steps {
                sh 'printenv TAP_HEADLESS'
                sh 'echo "starting tests"'
                sh 'pwd'
                dir('tests'){
                    sh 'ls'
                }
                sh 'python3.8 test.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
